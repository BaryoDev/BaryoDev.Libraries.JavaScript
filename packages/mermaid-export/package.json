{
    "name": "mermaid-export",
    "version": "1.0.0",
    "description": "Export Mermaid diagrams to SVG or image formats with a simple API",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "test": "vitest run"
    },
    "keywords": [
        "mermaid",
        "diagram",
        "svg",
        "png",
        "export",
        "render",
        "flowchart",
        "sequence-diagram"
    ],
    "author": "BaryoDev",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BaryoDev/BaryoDev.Libraries.JavaScript",
        "directory": "packages/mermaid-export"
    },
    "dependencies": {
        "puppeteer": "^23.0.0"
    },
    "engines": {
        "node": ">=18"
    }
}