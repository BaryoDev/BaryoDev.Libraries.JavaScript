{
    "name": "nano-clsx",
    "version": "1.0.0",
    "description": "A tiny, zero-dependency alternative to classnames or clsx",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "classnames",
        "clsx",
        "className",
        "css",
        "tailwind",
        "utility"
    ],
    "author": "BaryoDev",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BaryoDev/BaryoDev.Libraries.JavaScript",
        "directory": "packages/nano-clsx"
    },
    "homepage": "https://github.com/BaryoDev/BaryoDev.Libraries.JavaScript/tree/main/packages/nano-clsx"
}