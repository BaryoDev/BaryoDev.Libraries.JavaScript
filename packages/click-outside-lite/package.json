{
    "name": "click-outside-lite",
    "version": "1.0.1",
    "description": "A lightweight, framework-agnostic utility for detecting clicks outside an element",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "test": "vitest run"
    },
    "keywords": [
        "click-outside",
        "modal",
        "dropdown",
        "popup",
        "utility"
    ],
    "author": "BaryoDev",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BaryoDev/BaryoDev.Libraries.JavaScript",
        "directory": "packages/click-outside-lite"
    }
}
